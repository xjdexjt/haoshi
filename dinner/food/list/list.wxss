/*每行*/
.item {
	align-items: center;
	border-bottom: 1px solid #eee;
	background: white;
	margin-left: 0;
}

/*底部添加按钮*/
.add-food {
	border-top: 1px solid #eee;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background: white;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	padding: 12px 0;
}

.add-food .icon {
	width: 20px;
	height: 20px;
	margin-right: 5px;
}

.add-food .caption {
	font-size: 14px;
	color: #E81548;
	font-weight: bold;
	margin-left: 5px;
}

/*菜品列表容器*/
.food-container {
	padding-bottom: 44px;
}

/*菜品列表*/
.food-item {
	display: flex;
	flex-direction: row;
	padding: 5px 0;
	background: white;
	border-bottom: 1px solid #f1f1f1;
}

/*主图容器*/
.food-hd {
	width: 25%;
}

/*主图*/
.thumb {
	width: 60px;
	height: 60px;
	margin: 5px auto;
	display: block;
}

/*商品信息*/
.food-bd {
	width: 75%;
	margin-left: 10px;
}

/*标题与排序*/
.main {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.priority {
	margin-right: 10px;
	font-size: 10px;
	color: #999;
}

/*菜名*/
.title {
	font-weight: bold;
	font-size: 16px;
	padding: 4px 0;
	color: #333;
	margin-left: 0;
}

/*简述*/
.summary {
	padding: 4px 0;
	font-size: 12px;
	color: #9e9e9e;

}

/*价格与数量加减器*/
.price-stepper {
	padding: 4px 0;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

/*分类*/
.category {
	font-size: 14px;
	margin-right: 20px;
	color: #666;
	flex: 5;
}

/*价格*/
.price {
	flex: 1;
	font-size: 18px;
	color: #ff6000;
}

/*人民币符号*/
.price:before {
	content: "￥";
	font-size: 14px;
}

/*加减器*/
.stepper {
	flex: 1;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	align-items: center;
	padding-right: 5px;
}

/*加号*/
.symbol {
	width: 20px;
	height: 20px;
	margin: 0 10px;
}

/*数量*/
.value {
	font-size: 14px;
}